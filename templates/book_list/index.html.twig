{% extends 'base.html.twig' %}

{% block title %}Hello BookListController!
{% endblock %}

{% block body %}

	{{form(search_form)}}

	{% for book in paginator %}
		<div>
			<a href="{{ path('app_book', { isbn: book.isbn }) }}">
				{% block book %}
					{{ book.title }} by {{ book.author }}
				{% endblock %}
			</a>
		</div>
	{% endfor %}

	{# display navigation #}
	<div class="navigation">
		{{ knp_pagination_render(paginator) }}
	</div>

{% endblock %}
